<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2A0A30"
    tools:context=".InternationalFragment">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TableRow
            android:layout_width="317dp"
            android:layout_height="35dp">

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="0dp"
                android:layout_height="90dp"
                android:layout_marginEnd="10dp"
                android:layout_weight="2"
                android:adjustViewBounds="false"
                android:backgroundTint="#2A0A30"
                android:contentDescription="@string/app_name"
                android:maxHeight="20dp"
                android:scaleType="fitXY"
                android:src="@drawable/avion" />

            <Spinner
                android:id="@+id/spinnerCountries"
                android:layout_width="238dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_weight="1"
                android:autofillHints="PaÃ­s"
                android:background="@android:drawable/btn_dropdown"
                android:contentDescription="@string/next" />

        </TableRow>

        <TableRow
            android:layout_width="329dp"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:layout_width="369dp"
                android:layout_height="130dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/documentsrequire"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp"
                    android:text="" />
            </androidx.cardview.widget.CardView>

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginVertical="10dp">

            <androidx.cardview.widget.CardView
                android:layout_width="369dp"
                android:layout_height="45dp"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:layout_marginVertical="10dp"
                    android:text="" />
            </androidx.cardview.widget.CardView>
        </TableRow>

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/priceGround"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precio por Tierra" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/priceSee"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precio por Oceano" />
        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <Button
                android:id="@+id/priceAir"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precio por Aire" />
        </TableRow>

        <TableRow
            android:layout_width="368dp"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TableLayout
                    android:id="@+id/tableLayout"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="16dp"
                    android:layout_marginBottom="8dp" />
            </androidx.cardview.widget.CardView>

        </TableRow>
    </TableLayout>

</androidx.constraintlayout.widget.ConstraintLayout>